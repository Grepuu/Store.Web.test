@{
}

<h4>
    Add new ingredient
</h4>

<form method="post" asp-controller="Ingredient" asp-action="AddIngredientToProduct">
    <input type="hidden" name="ProductId" value="@(Model.ProductId)" />
    <div class="mb-3">
        <label for="Name" class="form-label">
            Name
        </label>
        <input type="text" class="form-control" name="Name" required />
    </div>
    <div class="mb-3">
        <label for="Mass" class="form-label">
            Mass
        </label>
        <input type="text" class="form-control" name="Mass" required />
    </div>
    <div class="mb-3">
        <button type="submit">
            Send
        </button>
    </div>
</form>