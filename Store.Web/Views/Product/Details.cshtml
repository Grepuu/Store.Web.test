@model Store.Web.Models.ViewModels.ProductDetailsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a class="btn btn-primary" asp-controller="Section" asp-action="Details" asp-route-id="@(Model.Product.SectionId)">
    Back
</a>

<h3>
    @(Model.Product.Name)
</h3>

<p>
    Id: @(Model.Product.Id)<br />
    Name: <strong>@(Model.Product.Name)</strong><br />
    Description: @(Model.Product.Description)<br />
    Size: @(Model.Product.Weight)<br />
    Maximum number of racks: @(Model.Product.Data)<br />
    <a class="btn btn-primary" asp-controller="Product" asp-action="RemoveProduct" asp-route-id="@(Model.Product.Id)">
        Delete
    </a>
</p>

@if (Model.Product.Ingredients != null)
{
    @foreach (var ingredient in Model.Product.Ingredients)
    {
        <p>
            <strong>@(ingredient.Name)</strong><br />
            @(ingredient.Mass) grams<br />
            <a class="btn btn-primary" asp-controller="Ingredient" asp-action="RemoveIngredient" asp-route-id="@(ingredient.Id)">
                Delete
            </a>
        </p>
    }
}


<a class="btn btn-success" asp-controller="Ingredient" asp-route-productId="@(Model.Product.Id)" asp-action="AddIngredientToProduct">
    Add new ingredient
</a>
    


